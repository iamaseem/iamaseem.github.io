<PageLayout meta={{ title: "Home" }}>
	<section>
		<div class="group title inline-flex">
			<h1 class="mb-6">Think. Build. Hack.</h1>
			<span class="ml-1 group-hover:animate-wiggle">ðŸ‘‹</span>
